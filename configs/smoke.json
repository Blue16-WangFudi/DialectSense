{
  "run_name": "smoke",
  "seed": 42,
  "data": {
    "metadata_csv": "datasets/metadata.csv",
    "audio_dir": "datasets/oggs",
    "id_col": "id",
    "label_col": "dialect.province",
    "uploader_col": "uploader_id",
    "min_votes": null,
    "top_k_labels": 6,
    "max_per_label": 30,
    "max_total": 150
  },
  "audio": {
    "target_sr": 16000,
    "min_sec": 1.0,
    "trim_silence": {
      "enabled": true,
      "threshold_db": -40.0,
      "min_silence_sec": 0.2
    },
    "normalize": {
      "enabled": true,
      "target_rms_dbfs": -20.0,
      "max_gain_db": 20.0,
      "peak_limit": 0.99
    }
  },
  "embed": {
    "backend": "wavlm_large",
    "model_id": "microsoft/wavlm-large",
    "model_cache_dir": ".cache/modelscope",
    "device": "auto",
    "layer_start": 6,
    "layer_end": 12,
    "chunk": {
      "max_sec": 12.0,
      "strategy": "chunk",
      "chunk_sec": 3.0,
      "hop_sec": 1.5,
      "agg": "mean",
      "max_chunks": 20
    }
  },
  "split": {
    "train_ratio": 0.7,
    "val_ratio": 0.1,
    "test_ratio": 0.2,
    "max_tries": 500,
    "min_groups_per_label": 2,
    "max_label_drop_iterations": 200,
    "min_per_label_train": 3,
    "min_per_label_val": 1,
    "min_per_label_test": 3
  },
  "coarse": {
    "enabled": true,
    "k": 3,
    "centroid": {
      "method": "mean",
      "trim_fraction": 0.1
    },
    "kmeans": {
      "n_init": 20
    }
  },
  "model": {
    "class_weight": "balanced",
    "C": 1.0,
    "max_iter": 8000,
    "calibration": {
      "enabled": true,
      "method": "sigmoid"
    }
  },
  "report": {
    "max_labels_bar": 30,
    "embedding_2d": {
      "method": "umap_if_available_else_tsne",
      "max_points": 2000,
      "perplexity": 30
    }
  }
}
